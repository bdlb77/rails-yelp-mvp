<h1><%= @restaurant.name %></h1>
<p><%= "Category: #{@restaurant.category}" %></p>
<p>Here are past reviews:</p>
<% @restaurant.reviews do |review| %>
	<p><%= review.content %></p>
	<p><%= review.rating %></p>
<% end %>
<p><%= link_to 'Return to Index', restaurants_path %></p>
<p><%= link_to 'Write a Review!', new_restaurant_review_path(@restaurant) %></p>

